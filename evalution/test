/******************************************************************************/
#.			HASTA_KISISEL_BILGILER TABLOSU
/******************************************************************************/
CREATE TABLE HASTA_KISISEL_BILGILER(
	HASTA_ID char(12) Primary key NOT NULL,
	TCKIMLIK_NO char(11) NOT NULL,
	HASTA_ADI varchar(50) NOT NULL,
	HASTA_SOYADI varchar(50) NOT NULL,
	ADRES varchar(750) NULL,
	ANNE_ADI varchar(50) NOT NULL,
	BABA_ADI varchar(50) NOT NULL,
	TELEFON char(11) NOT NULL,
	DOGUM_TARIHI char(10) NOT NULL,
	DOGUM_YERI varchar(50) NOT NULL,
	CINSIYET char(5) NOT NULL,
	GONDEREN varchar(50) NULL,
	KURUM_ADI varchar(60) NULL
);

