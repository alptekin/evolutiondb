SELECT HASTA_ID, TCKIMLIK_NO, HASTA_ADI, HASTA_SOYADI, ADRES, ANNE_ADI, BABA_ADI,
TELEFON, DOGUM_TARIHI, DOGUM_YERI, CINSIYET, GONDEREN, KURUM_ADI FROM HASTA_KISISEL_BILGILER
WHERE HASTA_ID = '1'
;

DELETE FROM HASTA_KISISEL_BILGILER WHERE HASTA_ID = '1'
;

UPDATE HASTA_KISISEL_BILGILER SET
TCKIMLIK_NO = '34563452346',
HASTA_ADI = 'İFFET',
HASTA_SOYADI = 'KAYIK',
ADRES = 'AMASYA',
ANNE_ADI = 'SEVİL',
BABA_ADI = 'RAMAZAN',
TELEFON = '05367367534',
DOGUM_TARIHI = '23/12/1957',
DOGUM_YERI = 'SİVAS',
CINSIYET = 'BAYAN',
GONDEREN = 'SELMA BAHTIGÜZEL',
KURUM_ADI = 'SGK'
WHERE HASTA_ID = '5'
;


/******************************************************************************/
-- 				DOKTOR TABLOSU
/******************************************************************************/
/*ALTER TABLE HASTA_KISISEL_BILGILER ADD CONSTRAINT(FOREIGN KEY(KURUM_ADI)
REFERENCES KURUMLAR (KURUM_ADI));*/

CREATE TABLE DOKTOR(
	DOKTOR_NO char(8) PRIMARY KEY NOT NULL,
	DOKTOR_ADI varchar(20) NOT NULL,
	DOKTOR_SOYADI varchar(20) NOT NULL,
	POLIKLINIK_ADI varchar(60) NOT NULL
)
;

INSERT INTO DOKTOR VALUES('1', 'SELMA', 'BAHTIGÜZEL', 'GÖZ')
;
INSERT INTO DOKTOR VALUES('2', 'MEHMET', 'SESİGÜZEL', 'RADYOLOJİ')
;
INSERT INTO DOKTOR VALUES('3', 'HASAN', 'ADIGÜZEL', 'KULAK BURUN BOĞAZ')
;
INSERT INTO DOKTOR VALUES('4', 'RECEP', 'İÇİGÜZEL', 'DAHİLİYE')
;
INSERT INTO DOKTOR VALUES('5', 'İSMAİL', 'YÜZÜGÜZEL', 'DAHİLİYE')
;

SELECT * FROM DOKTOR
;

DELETE FROM DOKTOR WHERE DOKTOR_NO = '1'
;

SELECT * FROM DOKTOR
;

UPDATE DOKTOR SET
DOKTOR_ADI = 'AHMET',
DOKTOR_SOYADI = 'SESİGÜZEL',
POLIKLINIK_ADI = 'RADYOLOJİ'
WHERE DOKTOR_NO = '2'
;

SELECT DOKTOR_ID, DOKTOR_ADI, DOKTOR_SOYADI, POLIKLINIK_ADI FROM DOKTOR
WHERE DOKTOR_NO = '5'
;

SELECT * FROM DOKTOR
;

